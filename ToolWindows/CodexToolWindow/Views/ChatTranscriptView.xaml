<UserControl x:Class="CodexVS22.ToolWindows.CodexToolWindow.Views.ChatTranscriptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DesignHeight="400">
    <Border Background="{DynamicResource VsBrush.EnvironmentBackgroundBrush}"
            Padding="12">
        <StackPanel>
            <TextBlock Text="Chat Transcript"
                       FontSize="16"
                       FontWeight="SemiBold" />
            <ItemsControl Margin="0,12,0,0"
                          ItemsSource="{Binding TranscriptItems}" />
        </StackPanel>
    </Border>
</UserControl>
